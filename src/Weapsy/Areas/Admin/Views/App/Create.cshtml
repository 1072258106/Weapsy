@model Weapsy.Reporting.Apps.AppAdminModel
@inject IHtmlLocalizer<Weapsy.Resources.Areas.Admin.App> AppLocalizer

@{
    ViewBag.Title = AppLocalizer["Title_Create"];
}

@section scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script src="~/js/admin/apps/shared.js"></script>
    <script src="~/js/admin/apps/create.js"></script>
}

<div class="page-header">
    <h1>@AppLocalizer["Title_Create"]</h1>
</div>

<form id="createAppForm" name="createAppForm" data-ajax="true" data-ajax-method="POST" data-ajax-url="/Admin/App/Save" data-ajax-loading="#savingApp" data-ajax-success="weapsy.admin.apps.redirectToIndex" class="form-horizontal validate-form" role="form">
    @await Html.PartialAsync("_App")
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button id="save" type="submit" class="btn btn-primary" title="@SharedLocalizer["Button_Save"]">@SharedLocalizer["Button_Save"]</button>
            <a href="@Url.Action("Index", "App", new { area = "Admin" })" class="btn btn-default" title="@SharedLocalizer["Button_Cancel"]">@SharedLocalizer["Button_Cancel"]</a>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <span id="savingApp" style="display:none;">
                @AppLocalizer["Saving"]
            </span>
        </div>
    </div>
</form>