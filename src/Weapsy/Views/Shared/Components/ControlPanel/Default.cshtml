@model IEnumerable<Weapsy.Reporting.ModuleTypes.ModuleTypeControlPanelModel>

@if (User.IsInRole("Administrator"))
{
    <link rel="stylesheet" href="~/css/control-panel.css" />
    <div id="control-panel" class="clearfix">
        <div class="container">
            @*<div style="margin-bottom:20px; text-align:center; font-weight:bold;">Control Panel</div>*@
            <div class="help" style="margin-bottom:10px;">Drag and drop modules into page zones</div>
            <ul id="moduleTypes" class="list-group">
                @foreach (var moduleType in Model)
                {
                    <li id="@moduleType.Id" class="list-group-item moduleType" data-module-type-id="@moduleType.Id" data-module-type-title="@moduleType.Title">
                        <span class="glyphicon glyphicon-option-vertical handle" aria-hidden="true"></span>
                        <span>@moduleType.Title</span>
                    </li>
                }
            </ul>
        </div>
    </div>
}

